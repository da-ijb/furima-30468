<!DOCTYPE html>
<html>

<head>
  <title>Furima</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script type="text/javascript" src="https://js.pay.jp/v1/"></script>
  <%= stylesheet_link_tag 'application', media: 'all'%>
  <%= javascript_pack_tag 'application' %>
</head>

<body>
 <% if user_signed_in? %> 
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
  <%= link_to "出品",  root_path, class: :nav__btn %>
 <% else %>
  <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
  <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
 <% end %> 
  <%= yield %>
</body>

</html>